mixin header(activePage)
  nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarColor02' aria-controls='navbarColor02' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarColor02.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        - let active = (activePage === 'Landing Page') ? true : false
        li(class = active ? 'nav-item active' : 'nav-item') 
          a.nav-link(href='/') Landing Page 
        - active = (activePage === 'Create') ? true : false
        li(class = active ? 'nav-item active' : 'nav-item') 
          a.nav-link(href='/create') Create 
        - active = (activePage === 'Search') ? true : false
        li(class = active ? 'nav-item active' : 'nav-item') 
          a.nav-link(href='/search') Search 
        - active = (activePage === 'Notification') ? true : false
        li(class = active ? 'nav-item active' : 'nav-item') 
          a.nav-link(href='/notification') Notification    
        
  script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
